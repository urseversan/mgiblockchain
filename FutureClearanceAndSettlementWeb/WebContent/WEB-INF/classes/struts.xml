<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="pages" namespace="/pages" extends="struts-default">
		<action name="home">
			<result>home.jsp</result>
		</action>
		<action name="login" class="com.action.LoginAction">
			<result name="SUCCESS">home.jsp</result>
			<result name="ERROR">home.jsp</result>
		</action>
		<action name="logout" class="com.action.LoginAction" method="logout">
			<result name="SUCCESS">home.jsp</result>
		</action>
		<action name="audit" class="com.action.AuditAction">
			<result name="SUCCESS">audit.jsp</result>
		</action>
		<action name="members" class="com.action.ParticipantsAction">
			<result name="SUCCESS">members.jsp</result>
		</action>
		<action name="viewchain" class="com.action.ViewChainAction">
			<result name="SUCCESS">viewchain.jsp</result>
		</action>
		<action name="updateChainID" method="applyChainID" class="com.action.ViewChainAction">
			<result name="SUCCESS">viewchain.jsp</result>
		</action>
		<action name="updateChainUrl" method="applyChainURL" class="com.action.ViewChainAction">
			<result name="SUCCESS">viewchain.jsp</result>
		</action>
		<action name="publishEvent" method="publishTransaction" class="com.action.ViewChainAction">
			<result name="SUCCESS">viewchain.jsp</result>
		</action>
	</package>

</struts>